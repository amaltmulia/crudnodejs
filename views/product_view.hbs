<html lang="en">
	<head>
    <meta charset="utf-8">
    <title>CRUD Node.js and Mysql</title>
	</head>
	<body>
		<h2>Product List</h2>
		<br>
		<a href="/add">Add New</a>
		<table id="mytable" width="100%" border=1>
      <thead>
        <tr>
          <th>Product ID</th>
          <th>Product Name</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
         {{#each results}}
        <tr>
          <td>{{ product_id }}</td>
          <td>{{ product_name }}</td>
          <td>{{ product_price }}</td>
          <td>
            <a href="/edit/{{product_id}}">Edit</a>
            <a href="/delete/{{product_id}}">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
</body>
</html>